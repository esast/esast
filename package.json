{
	"name": "esast",
	"version": "0.0.0",
	"files": ["src", "dist"],
	"license": "WTFPL",
	"repository": "mason-lang/esast",
	"scripts": {
		"build": "babel src --out-dir dist --source-maps inline",
		"watch": "babel src --out-dir dist --source-maps inline --watch",
		"doc": "esdoc -c esdoc.json",
		"lint": "eslint src test",
		"compile-test": "babel test --out-dir compiled-test --source-maps inline",
		"test": "npm run compile-test && mocha compiled-test/*.js",
		"perf-test": "npm run compile-test && node compiled-test/perf-test"
	},
	"dependencies": {
		"source-map": "mozilla/source-map"
	},
	"devDependencies": {
		"acorn": "2.6.4",
		"babel-cli": "6.3.13",
		"babel-plugin-transform-es2015-destructuring": "6.3.13",
		"babel-plugin-transform-es2015-modules-umd": "6.3.13",
		"babel-plugin-transform-es2015-parameters": "6.3.13",
		"babel-plugin-transform-strict-mode": "6.3.13",
		"esdoc": "0.4.3",
		"eslint": "1.10.3",
		"eslint-config-mason": "mason-lang/eslint-config-mason",
		"mocha": "2.3.4",

		"benchmark": "latest",
		"microtime": "latest",
		"escodegen": "latest",
		"esotope": "latest"
	},
	"babel": {
		"plugins": [
			"transform-es2015-destructuring",
			"transform-es2015-modules-umd",
			"transform-es2015-parameters",
			"transform-strict-mode"
		]
	},
	"eslintConfig": {"extends": "eslint-config-mason"}
}
